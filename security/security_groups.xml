<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Security Category: Sports Booking -->
    <record id="module_category_sports_booking" model="ir.module.category">
        <field name="name">Sports Booking</field>
        <field name="description">Category for Sports Facility Booking System permissions</field>
        <field name="sequence">20</field>
    </record>
    
    <!-- Security Group: Sports User -->
    <record id="group_sports_user" model="res.groups">
        <field name="name">Sports User</field>
        <field name="category_id" ref="module_category_sports_booking"/>
        <field name="comment">Sports User can view facilities and manage their own bookings</field>
    </record>
    
    <!-- Security Group: Sports Manager -->
    <record id="group_sports_manager" model="res.groups">
        <field name="name">Sports Manager</field>
        <field name="category_id" ref="module_category_sports_booking"/>
        <field name="implied_ids" eval="[(4, ref('group_sports_user'))]"/>
        <field name="comment">Sports Manager has full administrative access to all features</field>
    </record>
</odoo>
