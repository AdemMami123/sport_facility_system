<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Record Rule: Sports User - Own Bookings Only -->
    <record id="booking_user_rule" model="ir.rule">
        <field name="name">Sports User: Own Bookings Only</field>
        <field name="model_id" ref="model_sports_booking"/>
        <field name="domain_force">[('customer_id', '=', user.partner_id.id)]</field>
        <field name="groups" eval="[(4, ref('group_sports_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>
    
    <!-- Record Rule: Sports Manager - All Bookings -->
    <record id="booking_manager_rule" model="ir.rule">
        <field name="name">Sports Manager: All Bookings</field>
        <field name="model_id" ref="model_sports_booking"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_sports_manager'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>
</odoo>
