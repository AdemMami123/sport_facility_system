<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Website Menu: Sports -->
    <record id="menu_sports" model="website.menu">
        <field name="name">Sports</field>
        <field name="url">/sports</field>
        <field name="parent_id" ref="website.main_menu"/>
        <field name="sequence">50</field>
    </record>

    <!-- Submenu: Facilities -->
    <record id="menu_sports_facilities_website" model="website.menu">
        <field name="name">Facilities</field>
        <field name="url">/sports/facilities</field>
        <field name="parent_id" ref="menu_sports"/>
        <field name="sequence">10</field>
    </record>

    <!-- Submenu: My Bookings -->
    <record id="menu_sports_my_bookings" model="website.menu">
        <field name="name">My Bookings</field>
        <field name="url">/sports/my/bookings</field>
        <field name="parent_id" ref="menu_sports"/>
        <field name="sequence">20</field>
    </record>

    <!-- Submenu: Join Waitlist -->
    <record id="menu_sports_waitlist" model="website.menu">
        <field name="name">Join Waitlist</field>
        <field name="url">/sports/waitlist/join</field>
        <field name="parent_id" ref="menu_sports"/>
        <field name="sequence">30</field>
    </record>
</odoo>
