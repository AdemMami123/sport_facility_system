                                <div class="o_kanban_image">
                                    <img t-att-src="kanban_image('sports.equipment', 'image', record.id.raw_value)" 
                                         alt="Equipment" class="o_image_64_contain"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <div class="o_kanban_record_subtitle">
                                        <field name="equipment_type"/>
                                    </div>
                                    <div>
                                        Condition: <field name="condition" widget="badge"/>
                                    </div>
                                    <div t-if="record.quantity_available.raw_value &lt; 5" 
                                         class="text-danger">
                                        <strong>Low Stock: <field name="quantity_available"/> available</strong>
                                    </div>
                                    <div t-else="">
                                        Available: <field name="quantity_available"/> / <field name="total_quantity"/>
                                    </div>
                                    <div>
                                        Rate: <field name="rental_rate" widget="monetary"/> / hour
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        
        <!-- Search View for Sports Equipment -->
        <record id="view_sports_equipment_search" model="ir.ui.view">
            <field name="name">sports.equipment.search</field>
            <field name="model">sports.equipment</field>
            <field name="arch" type="xml">
                <search string="Search Equipment">
                    <field name="name" string="Equipment Name"/>
                    <field name="equipment_type"/>
                    <field name="condition"/>
                    <field name="facility_ids"/>
                    
                    <separator/>
                    
                    <filter string="Available" name="available" 
                            domain="[('quantity_available', '&gt;', 0)]"/>
                    <filter string="Out of Stock" name="out_of_stock" 
                            domain="[('quantity_available', '=', 0)]"/>
                    <filter string="Low Stock" name="low_stock" 
                            domain="[('quantity_available', '&lt;', 5), ('quantity_available', '&gt;', 0)]"/>
                    
                    <separator/>
                    
                    <filter string="Excellent Condition" name="excellent" 
                            domain="[('condition', '=', 'excellent')]"/>
                    <filter string="Good Condition" name="good" 
                            domain="[('condition', '=', 'good')]"/>
                    <filter string="Fair Condition" name="fair" 
                            domain="[('condition', '=', 'fair')]"/>
                    <filter string="Poor Condition" name="poor" 
                            domain="[('condition', '=', 'poor')]"/>
                    
                    <separator/>
                    
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                    
                    <group expand="0" string="Group By">
                        <filter string="Equipment Type" name="group_equipment_type" 
                                context="{'group_by': 'equipment_type'}"/>
                        <filter string="Condition" name="group_condition" 
                                context="{'group_by': 'condition'}"/>
                        <filter string="Facility" name="group_facility" 
                                context="{'group_by': 'facility_ids'}"/>
                    </group>
                </search>
            </field>
        </record>
        
