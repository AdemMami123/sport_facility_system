<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sports_equipment_form" model="ir.ui.view">
        <field name="name">sports.equipment.form</field>
        <field name="model">sports.equipment</field>
        <field name="arch" type="xml">
            <form string="Sports Equipment">
                <sheet>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Equipment Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="equipment_type"/>
                            <field name="condition"/>
                            <field name="rental_rate"/>
                        </group>
                        <group>
                            <field name="total_quantity"/>
                            <field name="quantity_available"/>
                            <field name="quantity_in_use"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <group>
                        <field name="facility_ids" widget="many2many_tags">
                            <tree>
                                <field name="name"/>
                                <field name="facility_type"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_sports_equipment_tree" model="ir.ui.view">
        <field name="name">sports.equipment.tree</field>
        <field name="model">sports.equipment</field>
        <field name="arch" type="xml">
            <tree string="Equipment">
                <field name="name"/>
                <field name="equipment_type"/>
                <field name="quantity_available"/>
                <field name="total_quantity"/>
                <field name="rental_rate"/>
                <field name="condition"/>
            </tree>
        </field>
    </record>

    <record id="view_sports_equipment_search" model="ir.ui.view">
        <field name="name">sports.equipment.search</field>
        <field name="model">sports.equipment</field>
        <field name="arch" type="xml">
            <search string="Search Equipment">
                <field name="name"/>
                <field name="equipment_type"/>
                <filter string="Available" name="available" domain="[('quantity_available', '>', 0)]"/>
                <filter string="Low Stock" name="low_stock" domain="[('quantity_available', '&lt;', 5)]"/>
                <group expand="0" string="Group By">
                    <filter string="Type" name="group_type" context="{'group_by': 'equipment_type'}"/>
                    <filter string="Condition" name="group_condition" context="{'group_by': 'condition'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_sports_equipment" model="ir.actions.act_window">
        <field name="name">Equipment</field>
        <field name="res_model">sports.equipment</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
