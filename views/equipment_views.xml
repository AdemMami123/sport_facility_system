        <!-- Kanban View for Sports Equipment -->
        <record id="view_sports_equipment_kanban" model="ir.ui.view">
            <field name="name">sports.equipment.kanban</field>
            <field name="model">sports.equipment</field>
            <field name="arch" type="xml">
                <kanban string="Equipment">
                    <field name="id"/>
                    <field name="name"/>
                    <field name="equipment_type"/>
                    <field name="condition"/>
                    <field name="quantity_available"/>
                    <field name="total_quantity"/>
