<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View for Sports Equipment -->
    <record id="view_sports_equipment_form" model="ir.ui.view">
        <field name="name">sports.equipment.form</field>
        <field name="model">sports.equipment</field>
        <field name="arch" type="xml">
            <form string="Sports Equipment">
                <sheet>
                    <!-- Image Widget -->
                    <field name="image" widget="image" class="oe_avatar"/>
                    
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="e.g. Tennis Racket"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group name="basic_info" string="Basic Information">
                            <field name="equipment_type"/>
                            <field name="condition"/>
                        </group>
                        
                        <group name="availability_info" string="Availability &amp; Pricing">
                            <field name="currency_id" invisible="1"/>
                            <field name="company_id" invisible="1"/>
                            <field name="quantity_available"/>
                            <field name="total_quantity"/>
                            <field name="quantity_in_use" readonly="1"/>
                            <field name="rental_rate" widget="monetary"/>
                        </group>
                    </group>
                    
                    <group>
                        <group name="facility_info" string="Compatible Facilities">
                            <field name="facility_ids" widget="many2many_tags"/>
                        </group>
                        
                        <group name="status_info" string="Status">
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
                
                <!-- Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    
    <!-- List View for Sports Equipment -->
    <record id="view_sports_equipment_list" model="ir.ui.view">
        <field name="name">sports.equipment.list</field>
        <field name="model">sports.equipment</field>
        <field name="arch" type="xml">
            <list string="Sports Equipment">
                <field name="name"/>
                <field name="equipment_type"/>
                <field name="quantity_available"/>
                <field name="rental_rate" widget="monetary" optional="show"/>
                <field name="condition" widget="badge" optional="show"/>
                <field name="total_quantity" optional="hide"/>
                <field name="quantity_in_use" optional="hide"/>
                <field name="facility_ids" widget="many2many_tags" optional="hide"/>
                <field name="currency_id" invisible="1"/>
                <field name="active" invisible="1"/>
            </list>
        </field>
    </record>
    
    <!-- Search View for Sports Equipment -->
    <record id="view_sports_equipment_search" model="ir.ui.view">
        <field name="name">sports.equipment.search</field>
        <field name="model">sports.equipment</field>
        <field name="arch" type="xml">
            <search string="Search Equipment">
                <field name="name" string="Equipment Name"/>
                <field name="equipment_type"/>
                <field name="condition"/>
                <field name="facility_ids"/>
                
                <separator/>
                
                <filter string="Available" name="available" 
                        domain="[('quantity_available', '&gt;', 0)]"/>
                <filter string="Out of Stock" name="out_of_stock" 
                        domain="[('quantity_available', '=', 0)]"/>
                <filter string="Low Stock" name="low_stock" 
                        domain="[('quantity_available', '&lt;', 5), ('quantity_available', '&gt;', 0)]"/>
                
                <separator/>
                
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                
                <group expand="0" string="Group By">
                    <filter string="Equipment Type" name="group_equipment_type" 
                            context="{'group_by': 'equipment_type'}"/>
                    <filter string="Condition" name="group_condition" 
                            context="{'group_by': 'condition'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Action for Sports Equipment -->
    <record id="action_sports_equipment" model="ir.actions.act_window">
        <field name="name">Equipment</field>
        <field name="res_model">sports.equipment</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_available': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add your first Equipment
            </p>
            <p>
                Click the create button to add equipment to your sports facility system.
            </p>
        </field>
    </record>
</odoo>
