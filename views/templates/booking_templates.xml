<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Facilities List Template -->
    <template id="facilities_list_template" name="Facilities List">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure">
                <div class="container mt-4">
                    <h1 class="text-center mb-4">Our Sports Facilities</h1>
                    <div class="row">
                        <t t-foreach="facilities" t-as="facility">
                            <div class="col-md-4 mb-4">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <t t-esc="facility.name"/>
                                        </h5>
                                        <p class="card-text">
                                            <strong>Type:</strong>
                                            <t t-esc="facility.facility_type"/>
                                        </p>
                                        <p class="card-text">
                                            <strong>Capacity:</strong>
                                            <t t-esc="facility.capacity"/> persons
                                        </p>
                                        <p class="card-text">
                                            <strong>Hourly Rate:</strong>
                                            <t t-esc="facility.hourly_rate"/>
                                            <t t-esc="facility.currency_id.symbol or '$'"/>
                                        </p>
                                        <a t-attf-href="/sports/facility/{{ facility.id }}" class="btn btn-primary">Book Now</a>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <!-- Booking Form Template -->
    <template id="booking_form_template" name="Facility Booking Form">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure">
                <div class="container mt-4 mb-5">
                    <div class="row">
                        <div class="col-lg-8 offset-lg-2">
                            <h1 class="text-center mb-4">Book <t t-esc="facility.name"/></h1>
                            
                            <!-- Facility Info Card -->
                            <div class="card mb-4">
                                <div class="card-header bg-primary text-white">
                                    <h5 class="mb-0">Facility Details</h5>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <p><strong>Type:</strong> <t t-esc="facility.facility_type"/></p>
                                            <p><strong>Capacity:</strong> <t t-esc="facility.capacity"/> persons</p>
                                        </div>
                                        <div class="col-md-6">
                                            <p><strong>Hourly Rate:</strong> <t t-esc="facility.hourly_rate"/> <t t-esc="facility.currency_id.symbol or '$'"/></p>
                                            <p><strong>Location:</strong> <t t-esc="facility.location or 'Not specified'"/></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Booking Form -->
                            <div class="card">
                                <div class="card-header bg-success text-white">
                                    <h5 class="mb-0">Booking Information</h5>
                                </div>
                                <div class="card-body">
                                    <form id="booking_form" action="/sports/confirm_booking" method="POST">
                                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                        <input type="hidden" name="facility_id" t-att-value="facility.id"/>
                                        
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="customer_name">Full Name <span class="text-danger">*</span></label>
                                                    <input type="text" class="form-control" id="customer_name" name="customer_name" 
                                                           t-att-value="partner.name if partner else ''" required="required"/>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="customer_email">Email <span class="text-danger">*</span></label>
                                                    <input type="email" class="form-control" id="customer_email" name="customer_email" 
                                                           t-att-value="partner.email if partner else ''" required="required"/>
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="customer_phone">Phone</label>
                                                    <input type="tel" class="form-control" id="customer_phone" name="customer_phone" 
                                                           t-att-value="partner.phone if partner else ''"/>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="booking_date">Booking Date <span class="text-danger">*</span></label>
                                                    <input type="date" class="form-control" id="booking_date" name="booking_date" required="required"/>
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="start_datetime">Start Date &amp; Time <span class="text-danger">*</span></label>
                                                    <input type="datetime-local" class="form-control" id="start_datetime" name="start_datetime" required="required"/>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="end_datetime">End Date &amp; Time <span class="text-danger">*</span></label>
                                                    <input type="datetime-local" class="form-control" id="end_datetime" name="end_datetime" required="required"/>
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <div class="form-group">
                                            <label for="notes">Additional Notes</label>
                                            <textarea class="form-control" id="notes" name="notes" rows="3" 
                                                      placeholder="Any special requirements or notes..."></textarea>
                                        </div>
                                        
                                        <div class="text-center">
                                            <button type="submit" class="btn btn-success btn-lg">Confirm Booking</button>
                                            <a href="/sports/facilities" class="btn btn-outline-secondary btn-lg ml-2">Back to Facilities</a>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <!-- Booking Confirmation Template -->
    <template id="booking_confirmation_template" name="Booking Confirmation">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure">
                <div class="container mt-5 mb-5">
                    <div class="row">
                        <div class="col-lg-8 offset-lg-2">
                            <!-- Success Message -->
                            <div class="alert alert-success text-center mb-4">
                                <h2 class="alert-heading">Booking Confirmed!</h2>
                                <p class="lead mb-0">Your booking has been successfully created.</p>
                            </div>
                            
                            <!-- Booking Details -->
                            <div class="card mb-4">
                                <div class="card-header bg-primary text-white">
                                    <h5 class="mb-0">Booking Details</h5>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <p><strong>Reference:</strong> <t t-esc="booking.booking_reference"/></p>
                                            <p><strong>Facility:</strong> <t t-esc="booking.facility_id.name"/></p>
                                            <p><strong>Customer:</strong> <t t-esc="booking.customer_id.name"/></p>
                                        </div>
                                        <div class="col-md-6">
                                            <p><strong>Date:</strong> <t t-esc="booking.start_datetime.strftime('%A, %B %d, %Y')"/></p>
                                            <p><strong>Time:</strong> <t t-esc="booking.start_datetime.strftime('%I:%M %p')"/> - <t t-esc="booking.end_datetime.strftime('%I:%M %p')"/></p>
                                            <p><strong>Duration:</strong> <t t-esc="booking.duration"/> hours</p>
                                        </div>
                                    </div>
                                    <hr/>
                                    <div class="text-center">
                                        <h4 class="text-success">
                                            Total Cost: <t t-esc="booking.total_cost" t-options="{'widget': 'monetary', 'display_currency': booking.currency_id}"/>
                                        </h4>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Action Buttons -->
                            <div class="text-center">
                                <a href="/sports/my/bookings" class="btn btn-primary btn-lg mr-2">View My Bookings</a>
                                <a href="/sports/facilities" class="btn btn-success btn-lg">Book Another</a>
                            </div>
                            
                            <!-- Information -->
                            <div class="alert alert-info mt-4">
                                <h5>What's Next?</h5>
                                <ul class="mb-0">
                                    <li>You will receive a confirmation email shortly</li>
                                    <li>Please save your booking reference: <strong><t t-esc="booking.booking_reference"/></strong></li>
                                    <li>Please arrive 10 minutes before your scheduled time</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
