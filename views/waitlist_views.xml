<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sports_waitlist_form" model="ir.ui.view">
        <field name="name">sports.waitlist.form</field>
        <field name="model">sports.waitlist</field>
        <field name="arch" type="xml">
            <form string="Waitlist Entry">
                <header>
                    <button name="action_notify_customer" string="Notify Customer" type="object" states="waiting" class="oe_highlight"/>
                    <button name="action_mark_booked" string="Mark as Booked" type="object" states="waiting,notified" class="oe_highlight"/>
                    <button name="action_mark_expired" string="Mark as Expired" type="object" states="waiting,notified"/>
                    <field name="status" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="customer_id"/>
                            <field name="facility_id"/>
                            <field name="preferred_date"/>
                        </group>
                        <group>
                            <field name="preferred_time_start" widget="float_time"/>
                            <field name="preferred_time_end" widget="float_time"/>
                            <field name="customer_email"/>
                            <field name="customer_phone"/>
                            <field name="notification_sent"/>
                        </group>
                    </group>
                    <group>
                        <field name="notes" placeholder="Additional notes..."/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_sports_waitlist_tree" model="ir.ui.view">
        <field name="name">sports.waitlist.tree</field>
        <field name="model">sports.waitlist</field>
        <field name="arch" type="xml">
            <tree string="Waitlist">
                <field name="customer_id"/>
                <field name="facility_id"/>
                <field name="preferred_date"/>
                <field name="preferred_time_start" widget="float_time"/>
                <field name="preferred_time_end" widget="float_time"/>
                <field name="status"/>
                <field name="notification_sent"/>
            </tree>
        </field>
    </record>

    <record id="view_sports_waitlist_search" model="ir.ui.view">
        <field name="name">sports.waitlist.search</field>
        <field name="model">sports.waitlist</field>
        <field name="arch" type="xml">
            <search string="Search Waitlist">
                <field name="customer_id"/>
                <field name="facility_id"/>
                <filter string="Waiting" name="waiting" domain="[('status', '=', 'waiting')]"/>
                <filter string="Notified" name="notified" domain="[('status', '=', 'notified')]"/>
                <filter string="Booked" name="booked" domain="[('status', '=', 'booked')]"/>
                <group expand="0" string="Group By">
                    <filter string="Facility" name="group_facility" context="{'group_by': 'facility_id'}"/>
                    <filter string="Status" name="group_status" context="{'group_by': 'status'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_sports_waitlist" model="ir.actions.act_window">
        <field name="name">Waitlist</field>
        <field name="res_model">sports.waitlist</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
