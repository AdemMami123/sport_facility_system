<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sports_facility_form" model="ir.ui.view">
        <field name="name">sports.facility.form</field>
        <field name="model">sports.facility</field>
        <field name="arch" type="xml">
            <form string="Sports Facility">
                <header>
                    <field name="status" widget="statusbar" clickable="True"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_bookings" type="object" class="oe_stat_button" icon="fa-calendar">
                            <field name="booking_count" widget="statinfo" string="Bookings"/>
                        </button>
                    </div>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Facility Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="facility_type"/>
                            <field name="capacity"/>
                            <field name="hourly_rate"/>
                            <field name="location"/>
                        </group>
                        <group>
                            <field name="operating_hours_start" widget="float_time"/>
                            <field name="operating_hours_end" widget="float_time"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description" placeholder="Enter facility description..."/>
                        </page>
                        <page string="Equipment">
                            <field name="equipment_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="equipment_type"/>
                                    <field name="quantity_available"/>
                                    <field name="rental_rate"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_sports_facility_tree" model="ir.ui.view">
        <field name="name">sports.facility.tree</field>
        <field name="model">sports.facility</field>
        <field name="arch" type="xml">
            <tree string="Facilities">
                <field name="name"/>
                <field name="facility_type"/>
                <field name="capacity"/>
                <field name="hourly_rate"/>
                <field name="status"/>
                <field name="booking_count"/>
            </tree>
        </field>
    </record>

    <record id="view_sports_facility_search" model="ir.ui.view">
        <field name="name">sports.facility.search</field>
        <field name="model">sports.facility</field>
        <field name="arch" type="xml">
            <search string="Search Facilities">
                <field name="name"/>
                <field name="facility_type"/>
                <filter string="Available" name="available" domain="[('status', '=', 'available')]"/>
                <filter string="Maintenance" name="maintenance" domain="[('status', '=', 'maintenance')]"/>
                <group expand="0" string="Group By">
                    <filter string="Type" name="group_type" context="{'group_by': 'facility_type'}"/>
                    <filter string="Status" name="group_status" context="{'group_by': 'status'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_sports_facility" model="ir.actions.act_window">
        <field name="name">Facilities</field>
        <field name="res_model">sports.facility</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
