<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Scheduled Action: Send Booking Reminders -->
    <record id="ir_cron_send_booking_reminders" model="ir.cron">
        <field name="name">Send Booking Reminders</field>
        <field name="model_id" ref="model_sports_booking"/>
        <field name="state">code</field>
        <field name="code">model._cron_send_booking_reminders()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="active" eval="True"/>
    </record>

    <!-- Scheduled Action: Archive Expired Bookings -->
    <record id="ir_cron_archive_expired_bookings" model="ir.cron">
        <field name="name">Archive Expired Bookings</field>
        <field name="model_id" ref="model_sports_booking"/>
        <field name="state">code</field>
        <field name="code">model._cron_archive_expired_bookings()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="active" eval="True"/>
    </record>

    <!-- Scheduled Action: Expire Old Waitlist Entries -->
    <record id="ir_cron_expire_waitlist_entries" model="ir.cron">
        <field name="name">Expire Old Waitlist Entries</field>
        <field name="model_id" ref="model_sports_waitlist"/>
        <field name="state">code</field>
        <field name="code">model._cron_expire_old_waitlist_entries()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="active" eval="True"/>
    </record>
</odoo>
