<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Scheduled Action: Send Booking Reminders -->
        <record id="ir_cron_send_booking_reminders" model="ir.cron">
            <field name="name">Send Booking Reminders</field>
            <field name="model_id" ref="model_sports_booking"/>
            <field name="state">code</field>
            <field name="code">model._cron_send_booking_reminders()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
            <field name="nextcall" eval="(DateTime.now() + timedelta(days=1)).replace(hour=9, minute=0, second=0)"/>
        </record>
        
    </data>
</odoo>
