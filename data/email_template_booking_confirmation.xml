<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="email_template_booking_confirmation" model="mail.template">
            <field name="name">Sports Booking Confirmation</field>
            <field name="model_id" ref="sports_booking.model_sports_booking"/>
            <field name="subject">Booking Confirmation - {{ object.booking_reference }}</field>
            <field name="email_from">{{ (object.company_id.email or user.email or '') }}</field>
            <field name="email_to">{{ object.customer_id.email }}</field>
            <field name="lang">{{ object.customer_id.lang }}</field>
            <field name="auto_delete" eval="False"/>
            <field name="body_html" type="html">
<table border="0" cellpadding="0" cellspacing="0" style="padding-top: 16px; background-color: #F4F4F4; font-family: Arial, Helvetica, sans-serif; color: #454748; width: 100%; border-collapse: separate;">
    <tr>
        <td align="center">
            <table border="0" cellpadding="0" cellspacing="0" width="590" style="padding: 16px; background-color: #FFFFFF; color: #454748; border-collapse: separate;">
                <tbody>
                    <tr>
                        <td align="center" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: #ffffff; padding: 30px 20px;">
                            <h1 style="margin: 0; font-size: 28px; font-weight: bold;">Booking Confirmed!</h1>
                            <p style="margin: 10px 0 0 0; font-size: 16px; opacity: 0.9;">Your sports facility reservation is confirmed</p>
                        </td>
                    </tr>
                    <tr>
                        <td style="padding: 30px 20px;">
                            <p style="font-size: 16px; margin-bottom: 20px; color: #333333;">
                                Dear <strong t-out="object.customer_id.name">Customer</strong>,
                            </p>
                            <div style="display: inline-block; background-color: #10b981; color: white; padding: 8px 16px; border-radius: 20px; font-weight: bold; margin-bottom: 20px;">
                                Booking Confirmed
                            </div>
                            <p>Thank you for your booking! We're excited to have you at our facility. Your reservation has been successfully confirmed.</p>
                            
                            <table border="0" cellpadding="8" cellspacing="0" style="background-color: #f9fafb; border: 1px solid #e5e7eb; border-radius: 8px; padding: 20px; margin: 20px 0; width: 100%;">
                                <tr>
                                    <td style="font-weight: bold; color: #6b7280; width: 140px;">Booking Reference:</td>
                                    <td style="color: #111827;"><strong t-out="object.booking_reference">REF-001</strong></td>
                                </tr>
                                <tr>
                                    <td style="font-weight: bold; color: #6b7280;">Facility:</td>
                                    <td style="color: #111827;"><strong t-out="object.facility_id.name">Tennis Court 1</strong></td>
                                </tr>
                                <tr>
                                    <td style="font-weight: bold; color: #6b7280;">Date:</td>
                                    <td style="color: #111827;" t-out="format_datetime(object.start_datetime, dt_format='EEEE, MMMM d, yyyy')">Monday, January 1, 2024</td>
                                </tr>
                                <tr>
                                    <td style="font-weight: bold; color: #6b7280;">Start Time:</td>
                                    <td style="color: #111827;" t-out="format_datetime(object.start_datetime, dt_format='HH:mm')">10:00</td>
                                </tr>
                                <tr>
                                    <td style="font-weight: bold; color: #6b7280;">End Time:</td>
                                    <td style="color: #111827;" t-out="format_datetime(object.end_datetime, dt_format='HH:mm')">11:00</td>
                                </tr>
                                <tr>
                                    <td style="font-weight: bold; color: #6b7280;">Duration:</td>
                                    <td style="color: #111827;"><t t-out="'%.1f' % object.duration">1.0</t> hours</td>
                                </tr>
                                <tr t-if="object.equipment_ids">
                                    <td style="font-weight: bold; color: #6b7280;">Equipment:</td>
                                    <td style="color: #111827;">
                                        <t t-foreach="object.equipment_ids" t-as="equipment">
                                            <span t-out="equipment.name">Equipment</span><t t-if="not equipment_last">, </t>
                                        </t>
                                    </td>
                                </tr>
                            </table>
                            
                            <div style="background-color: #667eea; color: white; padding: 15px 20px; border-radius: 8px; margin: 20px 0; text-align: center; font-size: 18px; font-weight: bold;">
                                Total Amount: <t t-out="object.currency_id.symbol or '$'">$</t><t t-out="'%.2f' % object.total_cost">0.00</t>
                            </div>
                            
                            <div style="background-color: #dbeafe; border-left: 4px solid #3b82f6; padding: 15px; margin: 20px 0; border-radius: 4px;">
                                <h4 style="margin-top: 0; color: #1e40af;">Important Information</h4>
                                <p style="margin: 5px 0; color: #1e40af; font-size: 13px;">Please arrive 10 minutes before your booking start time.</p>
                                <p style="margin: 5px 0; color: #1e40af; font-size: 13px;">Bring this confirmation email at reception.</p>
                                <p style="margin: 5px 0; color: #1e40af; font-size: 13px;">Cancellations made 48+ hours in advance receive a full refund.</p>
                            </div>
                            
                            <p style="margin-top: 30px; color: #6b7280; font-size: 13px;">
                                If you need to modify or cancel your booking, please contact us as soon as possible.
                            </p>
                        </td>
                    </tr>
                    <tr>
                        <td style="background-color: #f9fafb; padding: 20px; text-align: center; border-top: 1px solid #e5e7eb; font-size: 12px; color: #6b7280;">
                            <p style="margin: 5px 0;"><strong t-out="object.company_id.name or 'Sports Facility'">Sports Facility</strong></p>
                            <p style="margin: 5px 0;" t-if="object.company_id.phone">Phone: <t t-out="object.company_id.phone">+1234567890</t></p>
                            <p style="margin: 5px 0;" t-if="object.company_id.email">Email: <t t-out="object.company_id.email">info@example.com</t></p>
                            <p style="margin-top: 15px; color: #9ca3af; font-size: 11px;">
                                This is an automated confirmation email. Please do not reply directly to this email.
                            </p>
                        </td>
                    </tr>
                </tbody>
            </table>
        </td>
    </tr>
</table>
            </field>
        </record>
    </data>
</odoo>
